{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "dist/types"
  },
  "include": ["src/*"],
  "exclude": [
    "src/stories/*",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.stories.mdx"
  ]
}
